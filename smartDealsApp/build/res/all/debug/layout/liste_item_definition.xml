<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    >


    <TextView
        android:id="@+id/nomDeal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/nomDeal"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/emplacementDeal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/emplacementDeal"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/nomDeal"

        />


    <TextView
        android:id="@+id/textDescDeal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/descriptionDeal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/emplacementDeal"
        />


    <ImageView
        android:id="@+id/imageDeal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/photoDeal"
        android:src="@drawable/transaction64"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:id="@+id/groupeBouton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageDeal"
        android:layout_alignRight="@id/imageDeal"
        android:descendantFocusability="blocksDescendants"
        >
        <ImageButton
            android:id="@+id/imageMoins"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/minus24"
            android:adjustViewBounds="true"
            android:maxWidth="37dp"
            android:maxHeight="37dp"
            android:scaleType="fitCenter"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/counter"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1"
            android:layout_toRightOf="@id/imageMoins"
            android:layout_gravity="center"
            />
        <ImageButton
            android:id="@+id/imagePlus"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/plus24"
            android:adjustViewBounds="true"
            android:maxWidth="37dp"
            android:maxHeight="37dp"
            android:scaleType="fitCenter"
            android:focusable="false"
            />
    </LinearLayout>

    <View
        android:layout_below="@id/groupeBouton"
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="#000000"/>


</RelativeLayout><!-- From: file:/Users/tarekelchami/AndroidStudioProjects/SmartDealsApp/smartDealsApp/src/main/res/layout/liste_item_definition.xml -->