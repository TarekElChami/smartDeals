<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taucarre.smartdeals.smartdealsapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.taucarre.smartdeals.smartdealsapp.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_transaction48"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.taucarre.smartdeals.smartdealsapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.taucarre.smartdeals.smartdealsapp.AjoutDealActivity"
            android:label="@string/title_activity_ajout_deal" >
            <intent-filter>
                <action android:name="SMARTDEALS_PROPOSITION_DEAL_ACTIVITE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.taucarre.smartdeals.smartdealsapp.ListeDealsActivity"
            android:label="@string/title_activity_liste_deals" >
            <intent-filter>
                <action android:name="SMARTDEALS_LISTE_DEAL_ACTIVITE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.taucarre.smartdeals.smartdealsapp.FocusOnDealActivity"
            android:label="@string/title_activity_focus_on_deal" >
            <intent-filter>
                <action android:name="SMARTDEALS_FOCUS_DEAL_ACTIVITE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
